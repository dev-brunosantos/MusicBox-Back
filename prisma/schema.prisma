generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum Cargo {
  Aluno
  Professor
  Dev
}

model Usuario {
  id String @id @default(uuid())
  nome String 
  email String @unique 
  senha String
  cargo Cargo @default(Aluno)

  dataCadastro DateTime @default(now())
  dataAtualizacao DateTime @updatedAt
}